<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    
   <!-- 
   Lisa
   
   Er is gekozen voor een ScrollView, omdat de lijst als tekst groter kan worden dan het scherm
   En daarnaast een relative layout, omdat anders het lastig wordt om alles precies
   uit te lijnen
    -->    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/achtergrond3"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <!--
	Lisa
	
	De tekst wordt weergegeven in de vorm van een TextView. De tekst zelf is hardcoded gedaan ipv gedaan
	doormiddel van een database. Deze hele help pagina is tevens toch ingevoegd, de reden waarom is 
	tevens te lezen in het Adviesrapport -->

	   <ImageView
       android:id="@+id/ImageView01"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/icoon" 
       
       android:clickable="true"/>

        <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Help"
        android:textAppearance="?android:attr/textAppearanceLarge" />       

       
		<TextView
        android:id="@+id/dezePagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Op deze pagina valt te lezen: " />       
  
  		  
        
    </RelativeLayout>
   

    



</ScrollView>